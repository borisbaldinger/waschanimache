{
	"name": "Pulse UI: Cosmic",
	"version": "1.0",
	"description": "Adds title, caption and playback controls.",
	"demo": "http://koken.me",
	"author": {
		"name": "Koken",
		"link": "http://koken.me"
	},

	"plugin": "cosmic.js",

	"id": "koken_pulse_cosmic",

	"title": "Cosmic UI",

	"settings": {

		"koken_pulse_cosmic_position": {
			"label": "Position",
			"type": "select",
			"options": [
				{ "label": "Top", "value": "top" },
				{ "label": "Bottom", "value": "bottom" }
			],
			"value": "top"
		},

		"koken_pulse_cosmic_style": {
			"label": "Style",
			"type": "select",
			"options": [
				{ "label": "Black", "value": "black" },
				{ "label": "White", "value": "white" }
			],
			"value": "black"
		},

		"koken_pulse_cosmic_controls": {
			"label": "Show controls",
			"type": "boolean",
			"value": true
		},

		"koken_pulse_cosmic_fullscreen": {
			"label": "Show fullscreen button",
			"type": "boolean",
			"value": true,
			"dependencies": {
				"evaluate": "all",
				"conditions": [
					{
						"option": "koken_pulse_cosmic_controls",
						"equals": true
					}
				]
			}
		},

		"koken_pulse_cosmic_hover": {
			"label": "Hover color",
			"type": "color",
			"value": "white",
			"dependencies": {
				"evaluate": "all",
				"conditions": [
					{
						"option": "koken_pulse_cosmic_controls",
						"equals": true
					}
				]
			}
		}

	}

}