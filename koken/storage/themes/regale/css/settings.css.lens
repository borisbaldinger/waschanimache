/*
	FONTS
*/

@import url(css/[$font_body].css);

/*
	GENERAL
*/

body {
	background:$bgcolor_body;
	text-rendering:optimizeLegibility;
	-webkit-font-smoothing: subpixel-antialiased;
	-webkit-text-size-adjust: 100%;
	padding-bottom:80px;
}

a {
	color:$link_color;
	text-decoration: none;
	border-bottom:1px solid #000;
	padding-bottom:2px;
}

a:hover {
	color:$link_color_hover;
	border-bottom:0;
}

img {
	-ms-interpolation-mode: bicubic;
	vertical-align: bottom;
}

img.k-lazy-loading {
	background: url(css/spinner.gif) center center no-repeat;
}

/*
	HEADER, FOOTER, NAV
*/

header, footer {
	width:100%;
	background:$bgcolor_hf;
	padding-left:[$inset_pad]px;
	padding-right:[$inset_pad]px;
	-moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}

header {
	font-size:[$header_font_size]px;
	padding-top:[$header_pad_top]px;
	padding-bottom:[$header_pad_bot]px;
	vertical-align: middle;
	overflow: auto;
}

footer {
	position:fixed;
	z-index:999;
	left:0;
	bottom:0;
	padding-top:[$footer_pad_top]px;
	padding-bottom:[$footer_pad_bot]px;
	font-size:[$footer_font_size]px;
}

footer a {
	border-bottom:0;
}

header img {
	vertical-align: middle;
}

header .site-title {
	display:inline;
	margin-right:[$inset_spacing]px;
}

header h1 {
	display:inline;
	font-weight:$site_title_weight;
}

header h1 a {
	border-bottom:0;
}

nav {
	display:inline-block;
	float:right;
	margin:0;
	padding:0;
}

nav ul {
	list-style:none;
}

nav ul li {
	display:inline-block;
	margin-right:[$inset_spacing]px;
}

nav ul li:last-child {
	margin-right:0;
}

nav a {
	padding-bottom:2px;
	border-bottom:1px solid #000;
}

nav a.k-nav-current {
	border-bottom:0;
}

footer ul {
	list-style:none;
	display:inline-block;
}

footer ul li {
	display:inline-block;
	margin-right:[$inset_spacing]px;
}

footer span.copyright {
	float:right;
	display:block;
}

footer .social {
	display:inline-block;
	vertical-align: middle;
	margin-bottom:-8px;
}

footer .addthis_button_facebook_like iframe {
	margin-bottom:-5px !important;
}

div#container {
	position:relative;
}

/*
	GRID
*/

div#grid {
	margin-top:[$grid_col_offset]px;
	margin-left:[$grid_col_spacing]px;
	overflow:auto;
}

div#grid div.column {
	float:left;
	display:inline;
}

div#grid div.column a {
	display:block;
	margin-bottom:[$grid_col_spacing]px;
	margin-right:[$grid_col_spacing]px;
	border-bottom:0;
	padding-bottom:0;
}

/*
	GRID - ALBUMS
*/

div#grid.albums {
	margin-top:[$grid_albums_col_offset]px;
	margin-left:[$grid_albums_col_spacing]px;
}

div#grid.albums div.column a {
	margin-bottom:[$grid_albums_col_spacing]px;
	margin-right:[$grid_albums_col_spacing]px;
}

a.album-hover {
	position:relative;
	display:block;
}

a.album-hover p {
	margin-top:10px;
}

a.album-hover span.overlay {
	-ms-filter: "progid: DXImageTransform.Microsoft.Alpha(Opacity=0)";
  	filter: alpha(opacity=0);
	opacity:0;
	background:$albums_hover_bg_color;
	color:$albums_hover_text_color;
	z-index:1;
	display:block;
	position:absolute;
	top:0;
	left:0;
	width:100%;
	height:100%;
	padding:15px;
	text-align: left;
	-moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}

a.album-hover:hover span.overlay {
	-ms-filter: "progid: DXImageTransform.Microsoft.Alpha(Opacity=100)";
	filter: alpha(opacity=100);
	opacity: 1;
}

/*
	GRID ARRANGEMENTS
*/

div#grid.col-1 div.column { width:100%; }
div#grid.col-2 div.column { width:50%; }
div#grid.col-3 div.column { width:33.2%; }
div#grid.col-4 div.column { width:25%; }
div#grid.col-5 div.column { width:20%; }
div#grid.col-6 div.column { width:16.6%; }
div#grid.col-7 div.column { width:14.2%; }
div#grid.col-8 div.column { width:12.5%; }

/*
	CONTENT
*/

div#content {
	width:100%;
	overflow:auto;
}

div#content .pad {
	padding:0 60px;
}

div#content div.media {
	text-align:center;
}

div#content div.media img {
	max-height:1300px;
	margin:0 auto;
}

div#content-caption {
	width:100%;
	margin-top:20px;
	-moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}

div#content-caption div.col {
	float:left;
}

div#content-caption div.col.l {
	width:34%;
}

div#content-caption div.col.r {
	width:64%;
}

div#content-caption ul {
	list-style:none;
}

div#content-caption ul li {
	margin-bottom:20px;
}

div#content-caption p {
	margin-bottom:10px;
}

div#content-caption p:last-child {
	margin-bottom:0;
}

a.content-pag {
	display:block;
	font-size:21px;
	width:60px;
	height:60px;
	line-height:60px;
	text-align:center;
	vertical-align: middle;
	position:fixed;
	top:50%;
	margin-top:-30px;
	border-bottom:0;
}

a.content-pag.next {
	right:0;
}

/*
	ARCHIVE
*/

div.archive-head {
	width:100%;
	position:fixed;
	z-index:1;
	padding:0 [$inset_pad]px;
	-moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}

div.archive-head a.link-all {
	float:right;
	border:0;
}

/* push to allow room for archive head */
body.k-source-category #grid {
	padding-top:100px;
}

