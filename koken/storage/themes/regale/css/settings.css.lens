/* #Tablet (Landscape)
================================================== */

	@media only screen and (min-device-width : 768px) and (max-device-width : 1024px) and (orientation : landscape) {

		nav {
    		float:none;
    	}

		/*
			CONTENT
		*/

    	/* fit to viewport */
   		div#content div.media img {
   			max-height:570px;
   		}

	  	/*body::before{content: "TABLET LANDSCAPE";font-weight: bold;display: block;text-align: center;background: rgba(255,255,0, 0.9);position: fixed;top: 0;left: 0;right: 0;z-index: 9999;}*/
	}

/*  #Mobile (Portrait)
================================================== */

    @media only screen and (max-width: 767px) {

    	body {
    		font-size:14px !important;
    	}

    	nav {
    		float:none;
    	}

    	footer {
    		display:block;
    		position:relative;
    	}

    	footer span.copyright {
    		float:none;
    		position:relative;
    	}

    	/*
			GRID
		*/

    	div#grid {
    		margin:0;
    	}

    	div#grid div.column {
    		width:100%;
    		float:none;
    	}

    	div#grid div.column a {
    		margin:0 0 10px;
    	}

    	/* fit to viewport */
    	div#grid div.item {
    		text-align:center;
    	}
    	div#grid div.item img {
   			max-height:416px;
   			margin:0 auto;
   		}

    	/*
			GRID - ALBUMS
		*/

		div#grid.albums {
			margin:0;
		}

		div#grid.albums div.column a {
			margin:0 0 10px;
		}

    	/*
			CONTENT
		*/

		div#content-caption div.col {
			float:none;
		}

		div#content-caption div.col.l, div#content-caption div.col.r {
			width:100%;
		}

		div#content .pad {
			padding:0;
		}

		div#content-caption {
			padding-left:[$inset_pad]px;
			padding-right:[$inset_pad]px;
		}

		/* turn this on to position the arrows */
		div#content-pagination {
			position:relative;
			width:100%;
			height:50px;
		}

		a.content-pag {
			position:absolute;
			top:50%;
		}

		a.content-pag.next {
			left:50%;
		}

		a.content-pag.prev {
			right:50%;
		}

		/* fit to viewport */
   		div#content div.media img {
   			max-height:416px;
   		}

   		/* show titles b/c hover won't work */
   		a.album-hover span.overlay {
   			position:relative;
   			opacity:1;
   			padding-left:[$inset_pad]px;
			padding-right:[$inset_pad]px;
   		}

        /*body::before{content: "MOBILE PORTRAIT";font-weight: bold;display: block;text-align: center;background: rgba(255,255,0, 0.9);position: fixed;top: 0;left: 0;right: 0;z-index: 9999;}*/
	}

/* #Mobile (Landscape)
================================================== */

   	@media only screen and (min-width: 480px) and (max-width: 767px) {

   		/*
			GRID
		*/

   		/* fit to viewport */
    	div#grid div.item {
    		text-align:center;
    	}
    	div#grid div.item img {
   			max-height:268px;
   			margin:0 auto;
   		}

   		/*
			CONTENT
		*/

   		/* fit to viewport */
   		div#content div.media img {
   			max-height:268px;
   		}

        /*body::before{content: "MOBILE LANDSCAPE";font-weight: bold;display: block;text-align: center;background: rgba(255,255,0, 0.9);position: fixed;top: 0;left: 0;right: 0;z-index: 9999;}*/
	}

