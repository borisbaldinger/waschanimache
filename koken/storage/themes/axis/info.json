{
	"name": "Axis",
	"version": "1.1.1",
	"description": "Basic theme with support for featured content and collections only. Excellent for browsing album content with minimal fuss. Theme preview photo by Mathias Erhart.",
	"demo": "http://koken.me",
	"author": {
		"name": "Koken",
		"link": "http://koken.me"
	},
	"koken_version_required": "0.5.0",

	"styles": {
		"white": {
			"label": "White",
			"variables": {
				"background_color": "#fff",
				"title_color": "#333",
				"body_color": "#777",
				"header_color": "#333",
				"link_color": "#333",
				"link_hover_color": "#111",
				"current_color": "#777"
			}
		},
		"black": {
			"label": "Black",
			"variables": {
				"background_color": "#000",
				"title_color": "#ccc",
				"body_color": "#666",
				"header_color": "#ccc",
				"link_color": "#ccc",
				"link_hover_color": "#fff",
				"current_color": "#ccc"
			}
		}
	},

	"settings": {
		"Layout": {
			"icon": "layout",
			"settings": {
				"site_max_width": {
					"label": "Site max width",
					"type": "slider",
					"min": 650,
					"max": 1280,
					"step": 10,
					"value": 920,
					"suffix": "px"
				}
			}
		},
		"Style": {
			"icon": "style",
			"settings": {
				"background_color": {
					"label": "Background color",
					"type": "color",
					"control_first": "true"
				},
				"title_color": {
					"label": "Title color",
					"type": "color",
					"control_first": "true"
				},
				"body_color": {
					"label": "Text color",
					"type": "color",
					"control_first": "true"
				},
				"header_color": {
					"label": "Headers color",
					"type": "color",
					"control_first": "true"
				},
				"link_color": {
					"label": "Link color",
					"type": "color",
					"control_first": "true"
				},
				"link_hover_color": {
					"label": "Link hover color",
					"type": "color",
					"control_first": "true"
				},
				"current_color": {
					"label": "Current nav color",
					"type": "color",
					"control_first": "true"
				}
			}
		},
		"Navigation": {
			"icon": "nav",
			"settings": {
				"nav_spacing": {
					"label": "Spacing",
					"type": "slider",
					"min": 0,
					"max": 50,
					"step": 1,
					"value": 15,
					"suffix": "px"
				}
			}
		},
		"Site title": {
			"icon":"type",
			"settings": {
				"site_title_type": {
					"label": "Type",
					"type": "select",
					"options": [
						{ "label": "Text", "value": "text" },
						{ "label": "Image", "value": "image" }
					],
					"value": "text"
				},
				"site_title_size": {
					"label": "Size",
					"type": "slider",
					"min": 11,
					"max": 56,
					"step": 1,
					"value": 21,
					"suffix": "px",
					"dependencies": {
	                    "evaluate": "all",
	                    "conditions": [
	                         {
	                              "option": "site_title_type",
	                              "equals": "text"
	                         }
	                    ]
	               }
				},
				"site_title_case": {
					"label": "Transform",
					"type": "select",
					"options": [
						{ "label":"Uppercase", "value":"uppercase" },
						{ "label":"Lowercase", "value":"lowercase" },
						{ "label":"Capitalize", "value":"capitalize" },
						{ "label":"None", "value":"none" }
					],
					"value": "uppercase",
					"dependencies": {
	                    "evaluate": "all",
	                    "conditions": [
	                         {
	                              "option": "site_title_type",
	                              "equals": "text"
	                         }
	                    ]
	               }
				},
				"site_title_lh": {
					"label": "Line height",
					"type": "slider",
					"min": 1,
					"max": 4,
					"step": 0.1,
					"value": 1.5,
					"dependencies": {
	                    "evaluate": "all",
	                    "conditions": [
	                         {
	                              "option": "site_title_type",
	                              "equals": "text"
	                         }
	                    ]
	               }
				},
				"site_title_spacing": {
					"label": "Spacing",
					"type": "slider",
					"min": 0,
					"max": 50,
					"step": 1,
					"value": 4,
					"suffix": "px",
					"dependencies": {
	                    "evaluate": "all",
	                    "conditions": [
	                         {
	                              "option": "site_title_type",
	                              "equals": "text"
	                         }
	                    ]
	               }
				},
				"site_title_weight": {
					"label": "Weight",
					"type": "select",
					"options": [
						{ "label":"400", "value":"400" },
						{ "label":"600", "value":"600" }
					],
					"value":"400",
					"dependencies": {
	                    "evaluate": "all",
	                    "conditions": [
	                         {
	                              "option": "site_title_type",
	                              "equals": "text"
	                         }
	                    ]
	               }
				},
				"site_title_img_url": {
					"label": "Image URL",
					"type": "string",
					"value": "",
					"dependencies": {
	                    "evaluate": "all",
	                    "conditions": [
	                         {
	                              "option": "site_title_type",
	                              "equals": "image"
	                         }
	                    ]
	               }
				},
				"show_tagline": {
					"label": "Show tagline",
					"type": "boolean",
					"value": "true",
					"dependencies": {
	                    "evaluate": "all",
	                    "conditions": [
	                         {
	                              "option": "site_title_type",
	                              "equals": "text"
	                         }
	                    ]
	               }
				}
			}
		},
		"Caption": {
			"icon": "type",
			"scope": [ "album" ],
			"settings": {
				"show_title": {
					"label": "Show title",
					"type": "boolean",
					"value": true,
					"control_first": true
				},
				"show_caption": {
					"label": "Show caption",
					"type": "boolean",
					"value": true,
					"control_first": true
				},
				"caption_align": {
					"label": "Caption align",
					"type": "select",
					"options": [
						{"value": "left", "label":"Left"},
						{"value": "center", "label":"Center"},
						{"value": "justify", "label":"Justify"}
					],
					"value": "center",
					"dependencies": {
						"evaluate": "all",
						"conditions": [
							{
								"option": "show_caption",
								"equals": true
							}
						]
					}
				}
			}
		}
	}
}